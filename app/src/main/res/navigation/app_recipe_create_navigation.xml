<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/stepDetailFragment">

    <fragment
        android:id="@+id/stepDetailFragment"
        android:name="com.example.projectfoodmanager.presentation.recipe.create.tabs.StepDetailFragment"
        android:label="fragment_step_detail"
        tools:layout="@layout/fragment_step_detail" >
        <action
            android:id="@+id/action_stepDetailFragment_to_stepIngredientsFragment"
            app:destination="@id/stepIngredientsFragment" />
    </fragment>
    <fragment
        android:id="@+id/stepIngredientsFragment"
        android:name="com.example.projectfoodmanager.presentation.recipe.create.tabs.StepIngredientsFragment"
        android:label="fragment_step_ingredients"
        tools:layout="@layout/fragment_step_ingredients" >
        <action
            android:id="@+id/action_stepIngredientsFragment_to_stepPreparationFragment"
            app:destination="@id/stepPreparationFragment" />
    </fragment>
    <fragment
        android:id="@+id/stepPreparationFragment"
        android:name="com.example.projectfoodmanager.presentation.recipe.create.tabs.StepPreparationFragment"
        android:label="fragment_step_preparation"
        tools:layout="@layout/fragment_step_preparation" />

</navigation>
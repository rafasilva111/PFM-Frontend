<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 🌈 Base application theme -->
    <style name="Theme.ProjectFoodManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="colorSurface">@color/white</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/background_1</item>

        <!-- ⚠️ Remove opaque bars; handled dynamically -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Disable forced light status bar — handle insets in code -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Fonts / accent styles -->
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="textInputStyle">@style/Widget.ProjectFoodManager.TextInputLayout.OutlinedBox</item>

        <!-- Dialog & BottomSheet -->
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>
        <item name="materialCalendarTheme">@style/DatePicker</item>
        <item name="bottomSheetDragHandleStyle">@style/Widget.MaterialComponents.BottomSheet.DragHandle</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.DragHandle</item>

        <!-- Text color -->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 🧱 Transparent edge-to-edge overlay theme (for specific screens) -->
    <style name="Theme.ProjectFoodManager.TransparentBars" parent="Theme.ProjectFoodManager">

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- ✏️ TextInputLayout Style -->
    <style name="Widget.ProjectFoodManager.TextInputLayout.OutlinedBox"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="startIconTint">@color/black</item>
        <item name="helperTextTextColor">@color/black</item>
    </style>

    <!-- 💠 Chip Style -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/stroke_tint</item>
        <item name="chipStrokeColor">@color/stroke_tint</item>
        <item name="android:textAppearance">@style/TextAppearance.App.BodyMedium</item>
    </style>

    <!-- 🧩 Subtitle Text -->
    <style name="SubTitleStyle">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- 🔹 Tab text style -->
    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 🪟 Material Alert Dialog -->
    <style name="MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- 📅 Date Picker -->
    <style name="DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="materialCalendarHeaderTitle">@style/DatePicker.HeaderTitle</item>
        <item name="materialCalendarHeaderSelection">@style/DatePicker.HeaderSelection</item>
        <item name="materialCalendarHeaderToggleButton">@style/DatePicker.HeaderToggleButton</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

</resources>

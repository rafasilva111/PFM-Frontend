<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectFoodManager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bordeux</item>

        <item name="colorPrimaryVariant">@color/bordeux</item>
        <item name="colorOnPrimary">#F6F6F6</item>

        <item name="colorPrimaryDark">@color/bordeux</item>
        <item name="android:navigationBarColor">@color/bordeux</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#000000</item>
        <item name="colorSecondaryVariant">@color/bordeux</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:datePickerStyle">@style/MyDatePicker</item>

        <!--        <item name="android:windowLightStatusBar">true</item>-->

        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProjectFoodManager.NoActionBarAndStatusBar">
        <item name="colorPrimaryDark">@color/bordeux</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="SubTitleStyle">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
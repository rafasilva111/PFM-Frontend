<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayoutCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/verifyUserIV"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="-20dp"
        android:layout_marginBottom="-1dp"
        android:elevation="8dp"
        android:src="@drawable/verified"
        android:visibility="visible"
        android:contentDescription="@string/PLACEHOLDER_DEFAULT_IMAGE_DESCRIPTION"
        app:layout_constraintBottom_toBottomOf="@+id/imgAutorCV"
        app:layout_constraintStart_toEndOf="@+id/imgAutorCV" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imgAutorCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgAuthorIV"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@string/PLACEHOLDER_DEFAULT_IMAGE_DESCRIPTION"
            android:src="@drawable/default_image_user" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/nameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/fredoka_regular"
        android:text="@string/NAME"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgAutorCV"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout20"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgAutorCV"
        app:layout_constraintTop_toTopOf="@+id/imgAutorCV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/usernameTV"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/fredoka_regular"
        android:text="@string/USERNAME"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout20"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgAutorCV"
        app:layout_constraintTop_toBottomOf="@+id/nameTV"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout20"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/acceptFollowRequest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:backgroundTint="@color/main_color"
            app:strokeColor="#00FF2700"
            app:strokeWidth="2dp"
            android:fontFamily="@font/fredoka_regular"
            android:textStyle="bold"
            android:text="@string/COMMON_ACCEPT"
            android:visibility="gone"
            android:textSize="13sp" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/removeFollowBTN"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:backgroundTint="@color/grey"
            android:text="@string/COMMON_REMOVE_FOLLOW"
            android:fontFamily="@font/fredoka_regular"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendFollowRequestBTN"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:backgroundTint="@color/color_2"
            android:text="@string/ITEM_FOLLOWER_REQUEST_SEND"
            android:fontFamily="@font/fredoka_regular"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:visibility="visible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/removeFollowRequestBTN"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:backgroundTint="@color/grey"
            android:text="@string/ITEM_FOLLOWER_REQUEST_CANCEL"
            android:fontFamily="@font/fredoka_regular"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:visibility="gone"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
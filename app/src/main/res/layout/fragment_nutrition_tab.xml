<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.recipe.details.NutritionTabFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- ENERGIA -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fedoka"
                android:text="Energia"
                android:textAllCaps="true"
                android:textSize="12sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/energia_percTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fedoka"
                    android:text="0%"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/energia_PB"
                    app:layout_constraintEnd_toEndOf="@+id/energia_PB"
                    app:layout_constraintStart_toStartOf="@+id/energia_PB"
                    app:layout_constraintTop_toTopOf="@+id/energia_PB" />

                <ProgressBar
                    android:id="@+id/energia_PB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/energiaDose_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 g"
                android:textAlignment="center"/>

        </LinearLayout>

        <!-- GORDURA -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fedoka"
                android:text="Gordura"
                android:textAllCaps="true"
                android:textSize="12sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/gordura_percTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fedoka"
                    android:text="0%"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/gordura_PB"
                    app:layout_constraintEnd_toEndOf="@+id/gordura_PB"
                    app:layout_constraintStart_toStartOf="@+id/gordura_PB"
                    app:layout_constraintTop_toTopOf="@+id/gordura_PB" />

                <ProgressBar
                    android:id="@+id/gordura_PB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/gorduraDose_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 g"
                android:textAlignment="center"/>

        </LinearLayout>

        <!-- HIDRATOS DE CARBONO -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fedoka"
                android:text="Hidratos de Carbono"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="12sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hidratos_percTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fedoka"
                    android:text="0%"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hidratos_PB"
                    app:layout_constraintEnd_toEndOf="@+id/hidratos_PB"
                    app:layout_constraintStart_toStartOf="@+id/hidratos_PB"
                    app:layout_constraintTop_toTopOf="@+id/hidratos_PB" />

                <ProgressBar
                    android:id="@+id/hidratos_PB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/hidratosDose_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 g"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
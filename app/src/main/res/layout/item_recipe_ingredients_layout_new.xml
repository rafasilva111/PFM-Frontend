<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/fedoka"
        android:src="@drawable/ic_add_recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7">
        <!--        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fedoka"
            android:layout_gravity="center"
            android:src="@drawable/ic_item_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@android:id/text1" />-->


        <TextView
            android:id="@+id/nameIngridTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_regular"
            android:gravity="start|center"
            android:text="Ingrid. Name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/quantIngridTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/fredoka_regular"
            android:gravity="start|center"
            android:text="Ingrid. Quant"
            android:textColor="#888888"
            android:textSize="12sp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/updateIB"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_action_btn"
        android:backgroundTint="#FFBF00"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@+id/removeIB"
        app:layout_constraintEnd_toStartOf="@+id/removeIB"
        app:layout_constraintTop_toTopOf="@+id/removeIB"
        app:tint="#FFFFFF"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/removeIB"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_action_btn"
        android:backgroundTint="#FF1200"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.profile.user.ProfileFragment">


    <include
        android:id="@+id/header"
        layout="@layout/default_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:fadingEdge="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/vipIV"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="-25dp"
                    android:background="@drawable/layout_circle_bg"
                    android:backgroundTint="#FDEFC5"
                    android:elevation="8dp"
                    android:padding="5dp"
                    android:src="@drawable/vip"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/profileCV"
                    app:layout_constraintEnd_toEndOf="@+id/profileCV" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profileCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:foreground="@drawable/border_vip"
                app:cardCornerRadius="70dp"
                app:layout_constraintBottom_toTopOf="@+id/nameTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profileIV"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image_user" />
            </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fredoka_medium"
                    android:text="Nome Apelido"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/profileCV"
                    app:layout_constraintTop_toBottomOf="@+id/profileCV" />


                <ImageView
                    android:id="@+id/verifyUserIV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="5dp"
                    android:elevation="8dp"
                    android:src="@drawable/verified"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/nameTV"
                    app:layout_constraintStart_toEndOf="@+id/nameTV"
                    app:layout_constraintTop_toTopOf="@+id/nameTV" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/profileCV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profileCV"
                    app:layout_constraintTop_toTopOf="@+id/profileCV">

                    <LinearLayout
                        android:id="@+id/recipesLL"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nRecipesTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#4A4A4A"
                            android:textSize="15sp"
                            android:fontFamily="@font/fredoka_medium"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fredoka_regular"
                            android:text="receitas"
                            android:textAlignment="center"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/followersLL"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nFollowersTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#4A4A4A"
                            android:textSize="15sp"
                            android:fontFamily="@font/fredoka_medium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fredoka_regular"
                            android:text="seguidores"
                            android:textAlignment="center"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/followedsLL"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nFollowedsTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#4A4A4A"
                            android:textSize="15sp"
                            android:fontFamily="@font/fredoka_medium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fredoka_regular"
                            android:text="a seguir"
                            android:textAlignment="center"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/descTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/fredoka_regular"
                    android:maxLines="4"
                    android:text="Descrição"
                    android:textSize="13sp"
                    android:alpha="0.6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nameTV" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton3"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="Seguir"
                app:layout_constraintStart_toStartOf="@+id/descTV"
                app:layout_constraintTop_toBottomOf="@+id/descTV" />


            <TextView
                android:id="@+id/noRecipesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:text="@string/no_recipes"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialButton3"
                app:layout_constraintVertical_bias="0" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mostPopularRecipesCL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialButton3"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/header1TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fredoka_medium"
                    android:text="Mais populares"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/seeMore1MB"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#EBEBEB"
                    android:fontFamily="@font/fredoka_regular"
                    android:padding="0dp"
                    android:text="Ver mais"
                    android:textColor="#666666"
                    app:rippleColor="#B8B8B8"
                    app:layout_constraintBottom_toBottomOf="@+id/header1TV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/header1TV" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="#0C000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/header1TV"
                    app:layout_constraintTop_toBottomOf="@+id/header1TV" />

                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/mostPopularRecipesRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:requiresFadingEdge="horizontal"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view7" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/latestRecipesCL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/mostPopularRecipesCL"
                app:layout_constraintStart_toStartOf="@+id/mostPopularRecipesCL"
                app:layout_constraintTop_toBottomOf="@+id/mostPopularRecipesCL"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/header2TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fredoka_medium"
                    android:text="Mais recentes"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/seeMore2MB"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#EBEBEB"
                    android:fontFamily="@font/fredoka_regular"
                    android:padding="0dp"
                    android:text="Ver mais"
                    android:textColor="#6B6B6B"
                    app:layout_constraintBottom_toBottomOf="@+id/header2TV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/header2TV"
                    app:rippleColor="#B8B8B8" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="#0C000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/header2TV"
                    app:layout_constraintTop_toBottomOf="@+id/header2TV" />


                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/latestRecipesRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:requiresFadingEdge="horizontal"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

            </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.recipe.RecipeListingFragment">


    <ImageView
        android:id="@+id/notificationIV"
        android:layout_width="@dimen/iv_30"
        android:layout_height="@dimen/iv_30"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/COMMON_CONTENT_DESC_NOTIFICATIONS_BUTTON"
        android:src="@drawable/ic_notification"
        app:layout_constraintBottom_toBottomOf="@+id/profileCV"
        app:layout_constraintEnd_toStartOf="@+id/profileCV"
        app:layout_constraintTop_toTopOf="@+id/profileCV" />

    <TextView
        android:id="@+id/notificationsBadgeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-12dp"
        android:background="@drawable/bg_default"
        android:backgroundTint="@color/red"
        android:elevation="8dp"
        android:fontFamily="@font/fredoka_regular"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/COMMON_ZERO"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/notificationIV"
        app:layout_constraintTop_toTopOf="@+id/notificationIV" />

    <ImageView
        android:id="@+id/verifyUserHeaderIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-25dp"
        android:layout_marginBottom="-25dp"
        android:contentDescription="@string/COMMON_CONTENT_VERIFIED_SEAL"
        android:elevation="8dp"
        android:src="@drawable/verified"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/profileCV"
        app:layout_constraintStart_toEndOf="@+id/profileCV" />


    <ImageView
        android:id="@+id/vipIV"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="-15dp"
        android:background="@drawable/layout_circle_bg"
        android:backgroundTint="#FDEFC5"
        android:contentDescription="@string/COMMON_CONTENT_PREMIUM_SEAL"
        android:elevation="8dp"
        android:padding="5dp"
        android:src="@drawable/vip"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/profileCV"
        app:layout_constraintStart_toStartOf="@+id/profileCV"
        app:layout_constraintTop_toBottomOf="@+id/profileCV" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:foreground="@drawable/border_vip"
        app:cardCornerRadius="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="@dimen/iv_60"
            android:layout_height="@dimen/iv_60"
            android:adjustViewBounds="true"
            android:contentDescription="@string/COMMON_CONTENT_DESC_AUTHOR_IMAGE"
            android:scaleType="fitXY"
            android:src="@drawable/default_image_user" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fedoka"
            android:text="@string/FRAGMENT_RECIPE_LISTING_WELCOME"
            android:textColor="#000000"
            android:textSize="@dimen/ts_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/fredoka_regular"
            android:text="@string/FRAGMENT_RECIPE_LISTING_USER_NAME_PLACEHOLDER"
            android:textColor="#000000"
            android:textSize="@dimen/ts_20"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvWelcome"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <android.widget.SearchView
        android:id="@+id/SVsearch"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:queryBackground="@android:color/transparent"
        android:background="@drawable/layout_bg_low"
        android:backgroundTint="#ECECEC"
        android:layout_marginTop="@dimen/gt_30"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="5dp"
        android:iconifiedByDefault="false"
        android:queryHint="@string/FRAGMENT_RECIPE_LISTING_SEARCH_HINT"
        android:contentDescription="@string/FRAGMENT_RECIPE_LISTING_SEARCH_DESC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SVsearch">

        <HorizontalScrollView
            android:id="@+id/HSV_filter_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SVsearch"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:id="@+id/recipe_listing_filter_verified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FRAGMENT_RECIPE_LISTING_FILTER_VERIFIED"
                    android:tag="VERIFIED"
                    android:checked="true"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:id="@+id/recipe_listing_filter_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FRAGMENT_RECIPE_LISTING_FILTER_ALL"
                    android:tag="ALL"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:id="@+id/recipe_listing_filter_sugestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FRAGMENT_RECIPE_LISTING_FILTER_SUGGESTIONS"
                    android:tag="SUGGESTIONS"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:id="@+id/recipe_listing_filter_most_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FRAGMENT_RECIPE_LISTING_FILTER_SAVED"
                    android:tag="MOST_SAVED"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:id="@+id/recipe_listing_filter_most_liked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FRAGMENT_RECIPE_LISTING_FILTER_LIKED"
                    android:tag="MOST_LIKED"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:id="@+id/recipe_listing_filter_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FRAGMENT_RECIPE_LISTING_FILTER_RECENT"
                    android:tag="MOST_RECENT"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:id="@+id/recipe_listing_filter_random"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FRAGMENT_RECIPE_LISTING_FILTER_RANDOM"
                    android:tag="RANDOM"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:id="@+id/recipe_listing_filter_personalized_suggestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FRAGMENT_RECIPE_LISTING_FILTER_PERSONALIZED_SUGGESTIONS"
                    android:tag="PERSONALIZED_SUGGESTIONS"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recipeCard_CL"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="7dp"
            android:indeterminateTint="@color/main_color"
            android:outlineProvider="none"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/cardView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="@dimen/cv_w_240"
            android:layout_height="@dimen/cv_h_200"
            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView8"
            android:layout_width="@dimen/cv_w2_270"
            android:layout_height="@dimen/cv_h2_250"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/color_1"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView6"
            app:layout_constraintStart_toStartOf="@+id/cardView6"
            app:layout_constraintTop_toTopOf="@+id/cardView6" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="8dp"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/offlineTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/light_main_color"
        android:elevation="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/COMMON_NO_RESULTS"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:cornerRadius="24dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/noRecipesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/light_main_color"
        android:elevation="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/COMMON_NO_RESULTS"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:cornerRadius="24dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/nav_ginb_20"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--FILTER_MEAT-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/meatCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="carneCL">

                <TextView
                    android:id="@+id/meatTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="carneTV"
                    android:text="@string/COMMON_FILTER_MEAT"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ts_11"
                    app:layout_constraintEnd_toEndOf="@+id/meat_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/meat_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/meat_filt_IB"
                    android:layout_width="@dimen/ib_50"
                    android:layout_height="@dimen/ib_50"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:contentDescription="@string/COMMON_FILTER_MEAT"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_meat"
                    android:tag="carne_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/meatTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <!--FILT_FISH-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fishCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="peixeCL">

                <TextView
                    android:id="@+id/fishTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="peixeTV"
                    android:text="@string/COMMON_FILTER_FISH"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ts_11"
                    app:layout_constraintEnd_toEndOf="@+id/fish_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/fish_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/fish_filt_IB"
                    android:layout_width="@dimen/ib_50"
                    android:layout_height="@dimen/ib_50"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:contentDescription="@string/COMMON_FILTER_FISH"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_fish"
                    android:tag="peixe_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fishTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_SOUP-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/soupCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="sopasCL">

                <TextView
                    android:id="@+id/soupTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="sopasTV"
                    android:text="@string/COMMON_FILTER_SOUP"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ts_11"
                    app:layout_constraintEnd_toEndOf="@+id/soup_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/soup_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/soup_filt_IB"
                    android:layout_width="@dimen/ib_50"
                    android:layout_height="@dimen/ib_50"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:contentDescription="@string/COMMON_FILTER_SOUP"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_soup"
                    android:tag="sopas_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/soupTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_VEGI-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vegiCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="vegCL">

                <TextView
                    android:id="@+id/vegiTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="vegTV"
                    android:text="@string/COMMON_FILTER_VEGI"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ts_11"
                    app:layout_constraintEnd_toEndOf="@+id/vegi_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/vegi_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/vegi_filt_IB"
                    android:layout_width="@dimen/ib_50"
                    android:layout_height="@dimen/ib_50"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:contentDescription="@string/COMMON_FILTER_VEGI"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_veget"
                    android:tag="veg_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vegiTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <!-- Filter -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fruitCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="frutaCL">

                <TextView
                    android:id="@+id/fruitTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="frutaTV"
                    android:text="@string/COMMON_FILTER_FRUIT"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ts_11"
                    app:layout_constraintEnd_toEndOf="@+id/fruit_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/fruit_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/fruit_filt_IB"
                    android:layout_width="@dimen/ib_50"
                    android:layout_height="@dimen/ib_50"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:contentDescription="@string/COMMON_FILTER_FRUIT"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_fruit"
                    android:tag="fruta_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fruitTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_DRINK-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/drinkCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="bebidaCL">

                <TextView
                    android:id="@+id/drinkTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="bebidaTV"
                    android:text="@string/COMMON_FILTER_DRINK"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ts_11"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/drink_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/drink_filt_IB"
                    android:layout_width="@dimen/ib_50"
                    android:layout_height="@dimen/ib_50"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:contentDescription="@string/COMMON_FILTER_DRINK"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_drink"
                    android:tag="bebida_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/drinkTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

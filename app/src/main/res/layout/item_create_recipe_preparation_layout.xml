<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F1F1F1"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/stepTV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_item_prept"
                android:fontFamily="@font/fedoka"
                android:gravity="center"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#827717"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/discriptionTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/fredoka_regular"
                android:justificationMode="inter_word"
                android:text="@string/ingredients"
                android:textColor="#546E7A"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButton"
                app:layout_constraintStart_toEndOf="@+id/stepTV"
                app:layout_constraintTop_toTopOf="@+id/stepTV"
                app:layout_constraintVertical_bias="0" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:src="@drawable/ic_move"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#95000000" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/optionsCV"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:visibility="gone"
        app:cardBackgroundColor="#DFE3E3E3"
        app:cardCornerRadius="10dp"
        app:cardElevation="-1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/updateIB"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:background="@drawable/layout_bg"
                android:backgroundTint="#ABFFBF00"
                android:padding="5dp"
                android:src="@drawable/ic_edit"
                android:visibility="visible"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/fredoka_regular"
                android:text="Editar"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/updateIB"
                app:layout_constraintStart_toEndOf="@+id/updateIB"
                app:layout_constraintTop_toTopOf="@+id/updateIB" />

            <ImageView
                android:id="@+id/removeIB"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:background="@drawable/layout_bg"
                android:backgroundTint="#A8FF1200"
                android:padding="5dp"
                android:src="@drawable/ic_remove"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/updateIB"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/updateIB"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/fredoka_regular"
                android:text="Remover"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/updateIB"
                app:layout_constraintStart_toEndOf="@+id/removeIB"
                app:layout_constraintTop_toTopOf="@+id/updateIB" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
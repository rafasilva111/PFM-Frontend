<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


        <TextView
            android:id="@+id/stepTV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/layout_item_prept"
            android:fontFamily="@font/fedoka"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#827717"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/lineV"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#F2FFE5BE"
            android:layerType="software"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/stepTV"
            app:layout_constraintStart_toStartOf="@+id/stepTV"
            app:layout_constraintTop_toBottomOf="@+id/stepTV" />


        <TextView
            android:id="@+id/numberStepTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/fedoka"
            android:text="nÂº Step"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/stepTV"
            app:layout_constraintTop_toTopOf="@+id/stepTV" />

        <TextView
            android:id="@+id/discriptionTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/fredoka_regular"
            android:justificationMode="inter_word"
            android:text="@string/ingredients"
            android:textColor="#546E7A"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/numberStepTv"
            app:layout_constraintTop_toBottomOf="@+id/numberStepTv"
            app:layout_constraintVertical_bias="0" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineProvider="none"
    android:padding="5dp"
    android:id="@+id/CV_comment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_Comment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="visible">
        <androidx.cardview.widget.CardView
            android:id="@+id/img_autor_CV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/IV_Author"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/default_image_user"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/TV_c_Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/fedoka"
            android:text="@string/NAME"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/img_autor_CV"
            app:layout_constraintTop_toTopOf="@+id/img_autor_CV" />

        <TextView
            android:id="@+id/TV_c_Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DATE"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/TV_c_Message"
            app:layout_constraintTop_toTopOf="@+id/img_autor_CV" />

        <TextView
            android:id="@+id/TV_c_Message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_comment"
            android:backgroundTint="#E8E8E8"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:text="@string/COMMENT_ITEM_LAYOUT_COMMENT_TEXT"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/TV_c_Author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TV_c_Author" />

        <TextView
            android:id="@+id/TV_c_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/COMMENT_ITEM_LAYOUT_COMMENT"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/TV_c_Message"
            app:layout_constraintTop_toBottomOf="@+id/TV_c_Message" />

        <TextView
            android:id="@+id/TV_c_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/COMMENT_ITEM_LAYOUT_EDIT"
            android:visibility="invisible"
            android:textSize="13sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/TV_c_delete"
            app:layout_constraintTop_toBottomOf="@+id/TV_c_Message" />

        <TextView
            android:id="@+id/TV_c_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/COMMENT_ITEM_LAYOUT_DELETE"
            android:visibility="invisible"
            android:textSize="13sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/TV_c_comment"
            app:layout_constraintTop_toBottomOf="@+id/TV_c_Message" />


        <TextView
            android:id="@+id/TV_c_NLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/COMMENT_ITEM_LAYOUT_LIKES_DEFAULT"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/TV_c_Message" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_like"
            app:layout_constraintBottom_toBottomOf="@+id/TV_c_NLikes"
            app:layout_constraintStart_toStartOf="@+id/TV_c_Message"
            app:layout_constraintTop_toBottomOf="@+id/TV_c_Message" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
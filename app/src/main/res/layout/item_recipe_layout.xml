<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineProvider="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="330dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/CV_image_recipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foreground="#2D000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/good_food_display___nci_visuals_online"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/img_autor_CV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/CV_image_recipe">

                <ImageView
                    android:id="@+id/authorIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_pingo_doce" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/authorTV"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="-25dp"
                android:background="@drawable/layout_bg_rounded_1"
                android:backgroundTint="#252525"
                android:elevation="8dp"
                android:fontFamily="@font/fedoka"
                android:gravity="center|start"
                android:paddingStart="30dp"
                android:paddingTop="2dp"
                android:paddingEnd="15dp"
                android:paddingBottom="2dp"
                android:text="Author"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_autor_CV"
                app:layout_constraintStart_toEndOf="@+id/img_autor_CV"
                app:layout_constraintTop_toTopOf="@+id/img_autor_CV" />

            <ImageView
                android:id="@+id/verifyUserIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="-5dp"
                android:elevation="8dp"
                android:src="@drawable/verified"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/authorTV"
                app:layout_constraintTop_toTopOf="@+id/authorTV" />

            <!--        <ImageView
                        android:id="@+id/like"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/layout_bg_low"
                        android:elevation="3dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_like"
                        app:layout_constraintEnd_toEndOf="@+id/CV_image_recipe"
                        app:layout_constraintTop_toTopOf="@+id/CV_image_recipe" />-->


            <ImageButton
                android:id="@+id/favoritesIB"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/bg_action_btn"
                android:elevation="9dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_favorito_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="330dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout12"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout12"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout12">

        <ImageButton
            android:id="@+id/likeIB"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="-17dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/layout_circle_bg"
            android:backgroundTint="#EDEDED"
            android:elevation="10dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_like_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />

        <TextView
            android:id="@+id/nLikeTV"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/layout_bg_rounded_1"
            android:backgroundTint="#F8F8F8"
            android:elevation="10dp"
            android:layout_marginTop="-8dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/likeIB"
            app:layout_constraintTop_toTopOf="@+id/likeIB" />

        <ImageView
            android:id="@+id/verifyRecipeIV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-20dp"
            android:elevation="11dp"
            android:src="@drawable/verified_recipe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />

        <TextView
            android:id="@+id/verifyRecipeTV"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginStart="-18dp"
            android:background="@drawable/layout_bg_rounded_1"
            android:backgroundTint="#FFEBB0"
            android:elevation="10dp"
            android:fontFamily="@font/fedoka"
            android:gravity="center"
            android:padding="2dp"
            android:text="Verificada"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/verifyRecipeIV"
            app:layout_constraintStart_toEndOf="@+id/verifyRecipeIV"
            app:layout_constraintTop_toTopOf="@+id/verifyRecipeIV" />

        <androidx.cardview.widget.CardView
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout_item_recipes"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/recipeTitleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/fedoka"
                    android:text="Recipe Title"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <RatingBar
                    android:id="@+id/ratingRecipeRB"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:progressTint="#FFC107"
                    app:layout_constraintStart_toStartOf="@+id/recipeTitleTV"
                    app:layout_constraintTop_toBottomOf="@+id/recipeTitleTV" />

                <TextView
                    android:id="@+id/ratingMedTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="4,5"
                    android:fontFamily="@font/fredoka_regular"
                    android:textColor="#838383"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ratingRecipeRB"
                    app:layout_constraintStart_toEndOf="@+id/ratingRecipeRB"
                    app:layout_constraintTop_toTopOf="@+id/ratingRecipeRB" />



                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:alpha="0.6"
                    android:elevation="3dp"
                    android:src="@drawable/ic_baseline_calendar_month_24"
                    app:layout_constraintBottom_toBottomOf="@+id/dateTV"
                    app:layout_constraintEnd_toStartOf="@+id/dateTV"
                    app:layout_constraintTop_toTopOf="@+id/dateTV" />

                <TextView
                    android:id="@+id/dateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.7"
                    android:padding="2dp"
                    android:text="02/03/2022"
                    android:fontFamily="@font/fredoka_regular"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/recipeTitleTV"
                    app:layout_constraintTop_toBottomOf="@+id/recipeTitleTV" />


                <TextView
                    android:id="@+id/recipeDescriptionTV"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:justificationMode="inter_word"
                    android:text="Descrição"
                    android:fontFamily="@font/fredoka_regular"
                    android:textAlignment="gravity"
                    android:textSize="10sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toEndOf="@+id/recipeTitleTV"
                    app:layout_constraintStart_toStartOf="@+id/ratingRecipeRB"
                    app:layout_constraintTop_toBottomOf="@+id/ratingRecipeRB" />


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/timeIV"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_clock"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/timeTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:gravity="center|start"
                            android:text="Time"
                            android:textColor="@color/grey_2"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/IV_1"
                            app:layout_constraintStart_toStartOf="@+id/IV_1"
                            app:layout_constraintTop_toBottomOf="@+id/IV_1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/difficultyIV"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/low_difficulty"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/difficultyTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:gravity="center|start"
                            android:text="Difficulty"
                            android:textColor="@color/grey_2"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/IV_1"
                            app:layout_constraintStart_toStartOf="@+id/IV_1"
                            app:layout_constraintTop_toBottomOf="@+id/IV_1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/portionIV"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_portion"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/portionTV"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/fredoka_regular"
                            android:gravity="center|start"
                            android:text="Portion"
                            android:textColor="@color/grey_2"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/IV_1"
                            app:layout_constraintStart_toStartOf="@+id/IV_1"
                            app:layout_constraintTop_toBottomOf="@+id/IV_1" />

                    </LinearLayout>

                </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
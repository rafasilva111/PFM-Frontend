<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.ProjectFoodManager.TransparentBars"
    android:id="@+id/recipeTabParentConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.recipe.details.tabs.RecipeTabFragment">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/fredoka_semibold"
            android:text="@string/COMMON_DESCRIPTION"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#63AAAAAA" />

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/fredoka_regular"
            android:text="@string/COMMON_DESCRIPTION"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tag_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_semibold"
                android:text="@string/FRAGMENT_RECIPE_TAB_CATEGORY_LABEL"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/numberCategoriesTV"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_medium"
                android:text="@string/FRAGMENT_RECIPE_TAB_NUMBER_CATEGORY_LABEL"
                android:textAlignment="textEnd"
                android:textColor="@color/grey_2"
                android:textSize="13sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#63AAAAAA" />

    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/CH_tags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tag_LL"
        app:layout_constraintStart_toStartOf="@+id/tag_LL"
        app:layout_constraintTop_toBottomOf="@+id/tag_LL" />


    <LinearLayout
        android:id="@+id/ingredients_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CH_tags">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_semibold"
                android:text="@string/FRAGMENT_RECIPE_TAB_INGREDIENTS_LABEL"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/numberIngridientsTV"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_medium"
                android:text="@string/FRAGMENT_RECIPE_TAB_NUMBER_INGREDIENTS_LABEL"
                android:textAlignment="textEnd"
                android:textColor="@color/grey_2"
                android:textSize="13sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#63AAAAAA" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ingredientsLL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_LL"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ingredients_LL"
        app:layout_constraintTop_toBottomOf="@+id/ingredients_LL">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipeIngredientsRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerIngredientsListCatLL"
            app:layout_constraintVertical_bias="0.0" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/preparation_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsLL">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_semibold"
                android:text="@string/FRAGMENT_RECIPE_TAB_PREPARATION_LABEL"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/numberPreparationTV"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_medium"
                android:text="@string/FRAGMENT_RECIPE_TAB_NUMBER_PREPARATION_LABEL"
                android:textAlignment="textEnd"
                android:textColor="@color/grey_2"
                android:textSize="13sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#63AAAAAA" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="@+id/preparation_LL"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/preparation_LL"
        app:layout_constraintTop_toBottomOf="@+id/preparation_LL">



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipePreparationRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerIngredientsListCatLL"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
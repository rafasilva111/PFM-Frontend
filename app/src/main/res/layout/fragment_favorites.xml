<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.favorites.FavoritesFragment">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fedoka"
        android:text="Favoritos"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <SearchView
        android:id="@+id/SVsearch"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_bg_low"
        android:iconifiedByDefault="false"
        android:padding="5dp"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search Recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTV" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SVsearch">

        <HorizontalScrollView
            android:id="@+id/HSV_filter_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:scrollbars="none"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName">


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SVsearch">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_liked"
                    android:checked="true"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_saved"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_created"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_coment"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_last_seen"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_create_recipe"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_recipe"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nova Receita"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/fedoka"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_create_recipe">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="7dp"
            android:indeterminateTint="#FF6410"
            android:outlineProvider="none"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:textAlignment="center"
            app:flow_horizontalAlign="center"
            app:flow_verticalAlign="center"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_no_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No recipes to be apresented"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_create_recipe" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <!--FILT_MEAT-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/meatCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="meatCL">

                <TextView
                    android:id="@+id/meatTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="meatTV"
                    android:text="Carne"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/meat_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/meat_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/meat_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_meat"
                    android:tag="meat_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/meatTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <!--FILT_FISH-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fishCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="fishCL">

                <TextView
                    android:id="@+id/fishTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="fishTV"
                    android:text="Peixe"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/fish_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/fish_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/fish_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_fish"
                    android:tag="fish_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fishTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_SOUP-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/soupCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="soupCL">

                <TextView
                    android:id="@+id/soupTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="soupTV"
                    android:text="Sopa"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/soup_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/soup_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/soup_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_soup"
                    android:tag="soup_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/soupTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_VEGI-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vegiCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="vegiCL">

                <TextView
                    android:id="@+id/vegiTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="vegiTV"
                    android:text="Salada"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/vegi_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/vegi_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/vegi_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_veget"
                    android:tag="vegi_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vegiTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_FRUIT-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fruitCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="fruitCL">

                <TextView
                    android:id="@+id/fruitTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="fruitTV"
                    android:text="Fruta"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/fruit_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/fruit_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/fruit_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_fruit"
                    android:tag="fruit_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fruitTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_DRINK-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/drinkCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="drinkCL">

                <TextView
                    android:id="@+id/drinkTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="drinkTV"
                    android:text="Bebida"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/drink_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/drink_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_drink"
                    android:tag="drink_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/drinkTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.favorites.FavoritesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/fedoka"
        android:text="Favoritos"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/add_recipe_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_default"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        android:visibility="gone"
        tools:visibility="visible"/>

    <android.widget.SearchView
        android:id="@+id/SVsearch"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_bg_low"
        android:iconifiedByDefault="false"
        android:padding="5dp"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search Recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SVsearch">

        <HorizontalScrollView
            android:id="@+id/HSV_filter_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SVsearch"
                app:singleSelection="true"
                app:selectionRequired="true">


                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCurtidas"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:tag="@string/chip_tag_likes"
                    android:text="@string/tab_liked"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGuardados"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/chip_tag_saves"
                    android:text="@string/tab_saved"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCriadas"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/chip_tag_created"
                    android:text="@string/tab_created"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCommented"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/chip_tag_commented"
                    android:text="@string/tab_coment"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLastSeem"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/chip_tag_last_seen"
                    android:text="@string/tab_last_seen"
                    android:textSize="15sp"
                    app:chipMinHeight="20dp" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cv_create_recipe"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_recipe"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nova Receita"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/fedoka"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="7dp"
            android:indeterminateTint="@color/main_color"
            android:outlineProvider="none"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/cardView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="240dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView8"
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/color_1"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView6"
            app:layout_constraintStart_toStartOf="@+id/cardView6"
            app:layout_constraintTop_toTopOf="@+id/cardView6" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="8dp"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView8" />

        <TextView
            android:id="@+id/offlineTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:text="Estás offline..."
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cardView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_no_recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:text="@string/no_recipes"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cardView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <!--FILT_MEAT-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/meatCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="carneCL">

                <TextView
                    android:id="@+id/meatTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="carneTV"
                    android:text="Carne"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/meat_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/meat_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/meat_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_meat"
                    android:tag="carne_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/meatTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <!--FILT_FISH-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fishCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="peixeCL">

                <TextView
                    android:id="@+id/fishTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="peixeTV"
                    android:text="Peixe"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/fish_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/fish_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/fish_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_fish"
                    android:tag="peixe_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fishTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_SOUP-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/soupCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="sopasCL">

                <TextView
                    android:id="@+id/soupTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="sopasTV"
                    android:text="Sopa"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/soup_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/soup_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/soup_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_soup"
                    android:tag="sopas_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/soupTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_VEGI-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vegCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="vegCL">

                <TextView
                    android:id="@+id/vegTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="vegTV"
                    android:text="Salada"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/veg_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/veg_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/veg_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_veget"
                    android:tag="veg_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vegTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_FRUIT-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fruitCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="frutaCL">

                <TextView
                    android:id="@+id/fruitTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="frutaTV"
                    android:text="Fruta"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/fruit_filt_IB"
                    app:layout_constraintStart_toStartOf="@+id/fruit_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/fruit_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_fruit"
                    android:tag="fruta_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fruitTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <!--FILT_DRINK-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/drinkCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/card_cat"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:tag="bebidaCL">

                <TextView
                    android:id="@+id/drinkTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fedoka"
                    android:tag="bebidaTV"
                    android:text="Bebida"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/main_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/drink_filt_IB"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/drink_filt_IB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_cat"
                    android:backgroundTint="#F3F3F3"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_drink"
                    android:tag="bebida_filt_IB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/drinkTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
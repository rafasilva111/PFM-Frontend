<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgItemAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/img_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVipAvatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="-15dp"
        android:background="@drawable/layout_circle_bg"
        android:backgroundTint="#FDEFC5"
        android:elevation="8dp"
        android:padding="3dp"
        android:src="@drawable/vip"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgItemAvatar"
        app:layout_constraintStart_toStartOf="@+id/imgItemAvatar"
        app:layout_constraintTop_toBottomOf="@+id/imgItemAvatar" />



</androidx.constraintlayout.widget.ConstraintLayout>